{
	"name": "@3o14-0711/pie-ui",
	"version": "0.2.0",
	"type": "module",
	"license": "MIT",
	"description": "React + TypeScript UI component library with design tokens",
	"author": "3o14",
	"repository": {
		"type": "git",
		"url": "https://github.com/3o14/pie-ui.git"
	},
	"bugs": {
		"url": "https://github.com/3o14/pie-ui/issues"
	},
	"homepage": "https://github.com/3o14/pie-ui#readme",
	"keywords": [
		"react",
		"ui",
		"components",
		"design-system",
		"typescript"
	],
	"main": "./dist/pie-ui.cjs.js",
	"module": "./dist/pie-ui.es.js",
	"types": "./dist/components/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/pie-ui.es.js",
			"require": "./dist/pie-ui.cjs.js",
			"types": "./dist/components/index.d.ts"
		},
		"./style.css": "./dist/style.css",
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build && tsc --project tsconfig.build.json",
		"build:lib": "pnpm run build",
		"lint": "eslint .",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "pnpm run sync-readme && storybook build",
		"sync-readme": "node scripts/sync-readme.js",
		"prepublishOnly": "pnpm run build:lib",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build:lib && npm publish --access public"
	},
	"dependencies": {
		"clsx": "^2.1.1"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/js": "^9.39.1",
		"@storybook/addon-a11y": "^8",
		"@storybook/addon-essentials": "^8",
		"@storybook/addon-interactions": "^8",
		"@storybook/addon-storysource": "^8.6.14",
		"@storybook/blocks": "^8",
		"@storybook/react": "^8",
		"@storybook/react-vite": "^8",
		"@storybook/test": "^8",
		"@types/node": "^24.10.1",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@vanilla-extract/css": "^1.17.4",
		"@vanilla-extract/recipes": "^0.5.7",
		"@vanilla-extract/vite-plugin": "^5.1.1",
		"@vitejs/plugin-react": "^5.1.0",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"eslint-plugin-storybook": "^10.0.7",
		"globals": "^16.5.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"storybook": "^8",
		"storybook-dark-mode": "^4.0.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^5.4.11"
	},
	"eslintConfig": {
		"extends": [
			"plugin:storybook/recommended"
		]
	}
}
